<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.youyd.article.dao.ArticleDao" >

    <update id="examine" parameterType="java.lang.String">
        update tb_article set state='1' where id=#{id}
    </update>

    <update id="updateThumbup" parameterType="java.lang.String">
       update tb_article a set thumb_up = thumb_up+1 where id=#{id}
    </update>

</mapper>